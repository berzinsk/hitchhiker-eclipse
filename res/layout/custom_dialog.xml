<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    android:background="#85000000" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/popup_background"
        android:padding="20dp" >

        <EditText
            android:id="@+id/dialog_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/dialog_button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_edit_text"
            android:layout_below="@+id/dialog_edit_text"
            android:layout_marginTop="15dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/dialog_button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dialog_button_cancel"
            android:layout_alignRight="@+id/dialog_edit_text"
            android:text="Add" />
    </RelativeLayout>
 
</RelativeLayout>